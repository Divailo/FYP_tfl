import glob, os

SIGNAL_GROUPS_KEY = "$SIGNAL_GROUPS"

def readAFile(_file):
    f = open(_file)
    for line in f.readlines():
        print line.strip()

def getAllSignalGroups(_file):
    global SIGNAL_GROUPS_KEY

    f = open(_file)
    line = ""
    while line != SIGNAL_GROUPS_KEY:
        line = f.readline().strip()
    print line


